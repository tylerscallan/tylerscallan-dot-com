{
  "name": "tylerscallan-dot-com",
  "description": "Personal portfolio website showcasing photography and software projects",
  "author": "Tyler Callan <tylerscallan@outlook.com>",
  "homepage": "https://tylerscallan.com",
  "repository": "https://github.com/tylerscallan/tylerscallan-dot-com",
  "license": "Apache-2.0",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint -c config/eslint.config.js src/",
    "lint:fix": "eslint -c config/eslint.config.js src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "playwright test -c config/playwright.config.ts",
    "test:e2e": "playwright test -c config/playwright.config.ts",
    "test:e2e:ui": "playwright test -c config/playwright.config.ts --ui",
    "test:unit": "vitest -c config/vitest.config.ts",
    "test:unit:run": "vitest run -c config/vitest.config.ts",
    "test:coverage": "vitest run -c config/vitest.config.ts --coverage",
    "prepare": "husky",
    "generate:thumbs": "docker build -t thumbgen -f docker/thumbnails/Dockerfile . && docker run --rm -v \"$(pwd)\":/app thumbgen"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "tailwind-merge": "^3.4.0",
    "yet-another-react-lightbox": "^3.21.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint -c config/eslint.config.js --fix",
      "prettier --write"
    ],
    "src/**/*.css": [
      "prettier --write"
    ]
  }
}
